VFD=../mtximage

sudo mount -o loop $VFD /mnt
sudo rm /mnt/bin/*
sudo umount /mnt

echo --------------------- make $1 -----------------------
bcc -c -ansi $1.c
as86 -o u.o u.s
ld86 -o $1 u.o $1.o ../mtxlib /usr/lib/bcc/libc.a

sudo mount -o loop $VFD /mnt
sudo cp $1 /mnt/bin/$1
sudo umount /mnt

#sudo rm *.o $1
echo done $1
